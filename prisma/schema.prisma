generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////////

enum UserRole {
  SUPER_ADMIN
  SCHOOL_ADMIN
  PRINCIPAL
  VICE_PRINCIPAL
  HOD
  TEACHER
  ACCOUNTANT
  FINANCE_MANAGER
  FLEET_MANAGER
  ADMISSIONS_OFFICER
  EXAM_CELL
  LIBRARIAN
  WARDEN
  NURSE
  COUNSELOR
  INVENTORY_MANAGER
  RECEPTIONIST
  IT_ADMIN
  SECURITY_HEAD
  ESTATE_MANAGER
  PARENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum InvoiceStatus {
  PENDING
  VERIFIED
  PAID
}

enum DocumentStatus {
  PENDING
  VERIFIED
  REJECTED
}

//////////////////////////////////////////////////////
// CORE TENANT
//////////////////////////////////////////////////////

model School {
  id            String   @id @default(cuid())
  name          String
  settings_json Json?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  users    User[]
  students Student[]
  invoices Invoice[]
}

//////////////////////////////////////////////////////
// USERS (STAFF + PARENTS)
//////////////////////////////////////////////////////

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  phone         String?
  password_hash String
  role          UserRole
  department    String?
  school_id     String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // RELATIONS
  school       School             @relation(fields: [school_id], references: [id])
  parent_links ParentStudent[] // only for parents
  documents    IdentityDocument[]

  @@index([school_id])
  @@index([role])
}

//////////////////////////////////////////////////////
// STUDENTS
//////////////////////////////////////////////////////

model Student {
  id           String  @id @default(cuid())
  admission_no String
  name         String
  email        String? @unique
  class        String
  roll         Int
  school_id    String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // RELATIONS
  parents      ParentStudent[]
  documents    IdentityDocument[]
  invoices     Invoice[]
  attendance   Attendance[]
  medical_logs MedicalLog[]
  counseling   Counseling[]
  school       School?            @relation(fields: [schoolId], references: [id])
  schoolId     String?

  @@unique([school_id, admission_no])
  @@index([school_id])
}

//////////////////////////////////////////////////////
// PARENT â†” STUDENT (EXPLICIT JOIN)
//////////////////////////////////////////////////////

model ParentStudent {
  parent_id  String
  student_id String
  school_id  String
  relation   String // FATHER | MOTHER | GUARDIAN
  is_primary Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  parent  User    @relation(fields: [parent_id], references: [id], onDelete: Cascade)
  student Student @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@id([parent_id, student_id])
  @@index([school_id])
}

//////////////////////////////////////////////////////
// DOCUMENTS (METADATA ONLY)
//////////////////////////////////////////////////////

model IdentityDocument {
  id                  String         @id @default(cuid())
  owner_user_id       String?
  owner_student_id    String?
  doc_type            String // AADHAAR | DL | CASTE_CERT | TC
  file_ref            String // S3 / MinIO path
  masked_id           String?
  verification_status DocumentStatus @default(PENDING)
  school_id           String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  owner_user    User?    @relation(fields: [owner_user_id], references: [id])
  owner_student Student? @relation(fields: [owner_student_id], references: [id])

  @@index([school_id])
  @@index([doc_type])
}

//////////////////////////////////////////////////////
// FINANCE
//////////////////////////////////////////////////////

model Invoice {
  id              String        @id @default(cuid())
  student_id      String
  base_amount     Float
  discount_amount Float
  description     String
  due_date        DateTime
  status          InvoiceStatus @default(PENDING)
  utr             String?
  school_id       String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  student  Student @relation(fields: [student_id], references: [id])
  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  @@index([school_id])
  @@index([student_id])
}

//////////////////////////////////////////////////////
// ATTENDANCE
//////////////////////////////////////////////////////

model Attendance {
  id         String           @id @default(cuid())
  student_id String
  date       DateTime
  status     AttendanceStatus
  synced     Boolean          @default(false)
  school_id  String

  student Student @relation(fields: [student_id], references: [id])

  @@index([school_id])
  @@index([student_id])
}

//////////////////////////////////////////////////////
// MEDICAL
//////////////////////////////////////////////////////

model MedicalLog {
  id         String   @id @default(cuid())
  student_id String
  time       DateTime
  issue      String
  action     String
  school_id  String

  student Student @relation(fields: [student_id], references: [id])

  @@index([school_id])
  @@index([student_id])
}

//////////////////////////////////////////////////////
// COUNSELING
//////////////////////////////////////////////////////

model Counseling {
  id         String   @id @default(cuid())
  student_id String
  category   String
  note       String
  date       DateTime
  school_id  String

  student Student @relation(fields: [student_id], references: [id])

  @@index([school_id])
  @@index([student_id])
}
